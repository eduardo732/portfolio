---
interface Props {
  id: number;
  date: string;
  company: string;
  title: string;
  description: string;
}
const { id, date, company, title, description } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-50 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<time class="mb-1 text-sm font-normal leading-none text-gray-400">{date}</time>
<h3 class="text-lg font-semibold text-blue-400/100 dark:text-white mt-2">
  {title}
</h3>
<h4 class="text-lg font-semibold text-blue-500/100 dark:text-white mt-2">{company}</h4>
<p class="mb-4 mr-4 text-base text-justify font-normal text-gray-300">
  {description}
</p>
