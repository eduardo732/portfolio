---
interface Props {
  ref: string;
  name: string;
}
const { ref, name } = Astro.props;
---

<a
  href={ref}
  class="w-full flex flex-col items-center py-2 px-3 text-white rounded hover:bg-blue-700 md:hover:bg-transparent md:border-0 md:hover:text-blue-400/100 md:p-0 dark:text-white md:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent"
>
  {name}
</a>
